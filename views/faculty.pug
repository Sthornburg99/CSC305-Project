extends layout.pug
block content
    h2 #{role}: #{userID}
    if currentCourses.length === 0
        p This professor is teaching 0 courses
    else if currentCourses.length > 0
        table 
            thead
                tr 
                    th Course Number
                    th Term
                    th Year
            tbody   
                each course in currentCourses
                    tr 
                        each value in Object.values(course) 
                            td= value
